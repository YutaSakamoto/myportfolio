<%= render 'shared/navbar' %>

<section class="p-sm-5 p-2 bg-secondary">
  <div class="container-fluid">
    <div class="row">
      <div class="col text-center mb-5">
        <h1 class="text-success display-3">About Me</h1>
        <p class="lead text-light">簡単な自己紹介を下記にまとめました</p>
      </div>
    </div>

  <div class="row text-center">
    <div class="col-lg-4 sm-10 mx-auto mb-4">
      <div class="card" style="width: 18rem;">
        <%= image_tag 'basket.jpg', :size=>"286x300" %>
